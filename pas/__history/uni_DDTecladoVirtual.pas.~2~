//============================================================================//
procedure TForm2.FormCreate(Sender: TObject);
//============================================================================//
begin
  //Estado inicial da tecla alt.
  altState := false;

  //Estado inicial do shift
  shiftState := false;
  
  vsPath := ExtractFilePath( Application.ExeName );
end;


procedure TForm2.Label2Click(Sender: TObject);

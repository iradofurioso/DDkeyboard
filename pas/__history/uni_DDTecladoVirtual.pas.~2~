{metodo geral processa todas as letras e numeros}
//============================================================================//
procedure TForm2.SpeedButton37Click(Sender: TObject);
//============================================================================//
var
  btnValue  : string;
  valueChar : char;
begin
  btnValue := TSpeedButton(Sender).Caption;
  valueChar := btnValue[1];
  processLetter(valueChar);
end;


